{{define "search_view_item"}}
    <tr onclick="location.href = '/reviews/{{.ID}}'"; >
        <td>
            {{.Title}}
        </td>
        <td>
            {{.Author}}
        </td>
        <td>
            {{.Date}}
        </td>
    </tr>
{{end}}


{{define "search_view"}}
{{range .}}
    {{template "search_view_item" .}}
{{else}}
    <h3>No Result</h3>
{{end}}
{{end}}


{{define "content"}}
<h3 onclick="location.href = '/reviews'";>Result</h3>
<table class="table" >
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Date</th>
        </tr>
    {{template "search_view" .}}
</table>


    
