{{define "create_view"}}
<form enctype="multipart/form-data" action="/reviews/create/upload" method="post" name="storeForm" class="storeForm" >
    <h3 class="create_title">Please input info</h3>
    
    <div>
        <p>Store's name</p>
        <input name="store_name" placeholder="ABC">
    </div>

    <div>
        <p>Store's PhoneNumber</p>
        <input type="tel" name="phone_number" placeholder="000-000-0000"> 
    </div>

    <div>
        <p>Location</p>
        <div>Search box</div>
        <div id="map" style="width:500px;height:400px;"></div>
    </div>

    <div>
        <p>Date</p>
        <input type="date" name="date" id="date">
    </div>

    <div>
        <p>Store's picture</p>
        <input type="file" name="image" accept="image/x-png,image/gif,image/jpeg,image/png" multiple>
    </div>

    <div>
        <p>Author</p>
        <input type="text" name="author" placeholder="Author">
    </div>

    <div>
        <p>Title</p>
        <input type="text" name="title" maxlength="80" placeholder="Title">
    </div>

    <div>
        <p>Comment</p>
        <textarea rows="10" cols="50" name="comment" placeholder="Comment">
        </textarea>
    </div>

    <div class="form_btn">
        <input type="submit" value="Submit" onclick="Submit()">
        <input type="button" onclick="location.href = '/reviews'" value="Cancel">
    </div>

    <div>
        <!--<input type="hidden" id="csrfToken" value='{{.CsrfFiled}}'/>-->
        <input type="date" name="write_date" id="write_date"style="visibility: hidden;">
        <input name="location" style="visibility: hidden;">
    </div>
</form>
{{end}}

{{define "content"}}
<link rel="stylesheet" href="/reviews/ui/css/create.css">
<script type="text/javascript" src="//dapi.kakao.com/v2/maps/sdk.js?appkey={{.KakaoMaps}}"></script>
<script src="/reviews/ui/js/create-Js.js"></script>

{{template "create_view" .}}
{{end}}
